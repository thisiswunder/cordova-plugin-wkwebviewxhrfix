{
	"name": "@thisiswunder/cordova-plugin-wkwebviewxhrfix",
	"version": "1.0.0",
	"description": "Cordova plugin to fix local file XHR access inside WKWebView for Cordova iOS 6+",
	"cordova": {
		"id": "cordova-plugin-wkwebviewxhrfix",
		"platforms": [
			"ios"
		]
	},
	"scripts": {
    	"release": "npm pack && read -p 'GITHUB_TOKEN: ' GITHUB_TOKEN && export GITHUB_TOKEN=$GITHUB_TOKEN && rm -rf ./dist/*.tgz && mv *.tgz ./dist/release.tgz && release-it"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/thisiswunder/cordova-plugin-wkwebviewxhrfix"
	},
	"bugs": {
		"url": "https://github.com/thisiswunder/cordova-plugin-wkwebviewxhrfix/issues"
	},
	"homepage": "https://github.com/thisiswunder/cordova-plugin-wkwebviewxhrfix#readme",
	"keywords": [
		"cordova",
		"wkwebview",
		"ecosystem:cordova",
		"cordova-ios"
	],
	"author": "Wunder Innovation Studio",
	"license": "MIT",
	"engines": {
		"cordovaDependencies": {
			"1.0.0": {
				"cordova": ">5.0.0",
				"cordova-ios": ">4.0.0"
			}
		}
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"devDependencies": {
		"release-it": "^14.5.0"
	},
	"release-it": {
	  "git": {
		"commitMessage": "chore: release ${version}",
		"tagName": "${version}",
		"requireBranch": "master",
		"addUntrackedFiles": true,
		"requireCleanWorkingDir": false
	  },
	  "npm": {
		"publish": false
	  },
	  "github": {
		"release": true,
		"skipChecks": true,
		"assets": [
		  "dist/release.tgz"
		]
	  }
	}
}
